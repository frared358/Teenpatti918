<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/transp_red_bg">

    <ImageView
        android:id="@+id/chngdealerclose"
        android:layout_width="32dp"
        android:layout_height="32dp"
        android:src="@drawable/cross"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true" />
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <GridLayout
        android:id="@+id/GridLayout1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:columnCount="4"
        android:rowCount="8"
        android:layout_below="@+id/chngdealerclose"
        android:orientation="horizontal"
        android:layout_centerInParent="true"
        android:layout_centerHorizontal="true">

        <ImageView
            android:id="@+id/d1"
            android:layout_row="0"
            android:layout_column="0"
            android:padding="10dp"
            android:src="@drawable/playerbackground" />

        <ImageView
            android:id="@+id/d2"
            android:layout_row="0"
            android:layout_column="1"
            android:padding="10dp"
            android:src="@drawable/playerbackground"/>

        <ImageView
            android:id="@+id/d3"
            android:layout_row="0"
            android:layout_column="2"
            android:padding="10dp"
            android:src="@drawable/playerbackground" />
        <ImageView
            android:id="@+id/d4"
            android:layout_row="0"
            android:layout_column="3"
            android:padding="10dp"
            android:src="@drawable/playerbackground" />


       <!--2nd row starts from here.-->

        <ImageView
            android:id="@+id/d5"
            android:layout_row="1"
            android:layout_column="0"
            android:padding="10dp"
            android:src="@drawable/playerbackground"/>

        <ImageView
            android:id="@+id/d6"
            android:layout_row="1"
            android:layout_column="1"
            android:padding="10dp"
            android:src="@drawable/playerbackground"/>
        <ImageView
            android:id="@+id/d7"
            android:layout_row="1"
            android:layout_column="2"
            android:padding="10dp"
            android:src="@drawable/playerbackground"
            tools:ignore="GridLayout" />
        <ImageView
            android:id="@+id/d8"
            android:padding="10dp"
            android:layout_row="1"
            android:layout_column="3"
            android:src="@drawable/playerbackground"/>

        <!--3rd row starts from here.-->

        <ImageView
            android:id="@+id/d9"
            android:layout_row="2"
            android:layout_column="0"
            android:padding="10dp"
            android:src="@drawable/playerbackground"/>

        <ImageView
            android:id="@+id/d10"
            android:layout_row="2"
            android:layout_column="1"
            android:padding="10dp"
            android:src="@drawable/playerbackground"/>
        <ImageView
            android:id="@+id/d11"
            android:layout_row="2"
            android:layout_column="2"
            android:padding="10dp"
            android:src="@drawable/playerbackground"
            tools:ignore="GridLayout" />
        <ImageView
            android:id="@+id/d12"
            android:padding="10dp"
            android:layout_row="2"
            android:layout_column="3"
            android:src="@drawable/playerbackground"/>
    </GridLayout>
    </ScrollView>
</RelativeLayout>