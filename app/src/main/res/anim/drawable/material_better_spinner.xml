<?xml version="1.0" encoding="utf-8"?>

<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape
            android:shape="rectangle">
            <corners
                android:radius="5dp" />
            <gradient
                android:angle="90"
                android:centerX="70%"
                android:centerY="0%"
                android:centerColor="#d1cece"
                android:startColor="#aeabab"
                android:endColor="#aeabab"
                android:type="linear"
                />
            <padding
                android:left="0dp"
                android:top="0dp"
                android:right="0dp"
                android:bottom="0dp"
                />
            <size
                android:width="150dp"
                android:height="40dp"
                />

        </shape>
    </item>
    <item
        android:drawable="@drawable/spinner_down_arrow"
        android:gravity="center_vertical|end"
        android:left="150dp"
        android:right="10dp"
        android:top="8dp"
        android:bottom="8dp"
        />
</layer-list>

